<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="2"
    android:gravity="center"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/video_image_1"
            android:visibility="invisible"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_image_height" />

        <TextView
            android:background="@drawable/gradient"
            android:id="@+id/video_tip_1"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/video_title_1"
        android:maxLines="1"
        android:lines="1"
        android:textSize="13dp"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_2"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/video_image_2"
            android:visibility="invisible"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_image_height" />

        <TextView
            android:background="@drawable/gradient"
            android:id="@+id/video_tip_2"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/video_title_2"
        android:maxLines="1"
        android:lines="1"
        android:textSize="13dp"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>